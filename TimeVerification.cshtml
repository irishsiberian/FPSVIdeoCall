@using FPSVideoCallApplication.Common;
@model FPSVideoCallApplication.Models.Terminal.TimeVerificationModel
@{
    ViewBag.Title = "Сверка доступного времени для видеосвидания";
}
@section HeadLinks{
    <link href="@Url.Content("~/Content/common.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/application.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.combobox.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Models/initregioncombobox.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Models/application.js")" type="text/javascript"></script>

    <script type="text/javascript">  TerminalTimeVerificationAction();</script>

}
<h2>
    @ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(true)
        <div class="editor-label">
            @Html.LabelFor(model => model.RegionId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.RegionId, (List<SelectListItem>)ViewBag.Regions)
            @Html.ValidationMessageFor(model => model.RegionId)
            <div class="clear">
            </div>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.CorrectionFacilityId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.CorrectionFacilityId, (List<SelectListItem>)ViewBag.CorrectionFacilities ?? new List<SelectListItem>())
            @Html.ValidationMessageFor(model => model.CorrectionFacilityId)
            <div class="clear">
            </div>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.ConvictTerminalId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.ConvictTerminalId, (List<SelectListItem>)ViewBag.ConvictTerminals ?? new List<SelectListItem>())
            @Html.ValidationMessageFor(model => model.ConvictTerminalId)
            <div class="clear">
            </div>
        </div>
        <div class="editor-label">
            @Html.Label("Регион установки видеотерминала ПКД")
        </div>
        <div class="editor-field">
            @Html.DropDownList("PublicTerminalRegionId", (List<SelectListItem>)ViewBag.RegionsWithPublicTerminals)
            <div class="clear">
            </div>
        </div>
        <div class="editor-label">
            @Html.Label("Учреждение установки видеотерминала ПКД")
        </div>
        <div class="editor-field">
            @Html.DropDownList("PublicTerminalCorrectionFacilityId", new List<SelectListItem>())
            <div class="clear">
            </div>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.PublicTerminalId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.PublicTerminalId, new List<SelectListItem>())
            @Html.ValidationMessageFor(model => model.PublicTerminalId)
            <div class="clear">
            </div>
        </div>
        <div class="editor-label">
            @Html.Label("Выберите дату видеосвидания")
        </div>
        <div class="editor-field">
            @Html.TextBox("VideoCallDateWithout3DaysLimit")
        </div>
        <div class="free-time-list">
            <div class="editor-label">
                @Html.Label("Доступное для видеосвидания время:")
            </div>
            <span id="TimeZoneInfoStr"></span>
            <ul id="VideoCallTime">
            </ul>
        </div>
}
<div class="clear">
</div>

